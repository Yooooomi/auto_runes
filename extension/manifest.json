{
    "name": "Autorunes",
    "author": "Yooooomi",
    "version": "1.0.2",
    "description": "Extension to interact directly with native Autorunes APP",
    "manifest_version": 2,
    "icons": {
        "128": "assets/rune.png"
    },
    "permissions": [
        "webNavigation",
        "nativeMessaging",
        "tabs",
        "contextMenus"
    ],
    "browser_action": {
        "default_title": "Autorunes"
    },
    "background": {
        "scripts": ["index.js"],
        "persistent": false
    }
}